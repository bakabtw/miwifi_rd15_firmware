config common 'settings'
    option ports '1 2 3 4'
    option vlan_type '8021q'


config port '1'
    option service 'lan'
    option speed '1G'
    option link_mode '0'
    option switch 'switch1'
    option cpu_port '5'
    option phy_id '3'
    option base_iface 'eth0'
    option type 'eth'
    option label '1'
    option vid '1'
    option ifname 'eth0.1'

