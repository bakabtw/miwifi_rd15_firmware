
config globals 'globals'
	option mmx_mask '0x3F00'
	option local_source 'lan'
	option enabled '0'
	option mode '0'

config interface 'wan'
	option enabled '1'
	list track_ip '223.5.5.5'
	list track_ip '180.76.76.76'
	list track_ip '119.29.29.29'
	option family 'ipv4'
	option reliability '1'
	option count '4'
	option timeout '2'
	option failure_latency '1000'
	option recovery_latency '500'
	option failure_loss '75'
	option recovery_loss '5'
	option interval '3'
	option down '2'
	option up '3'
	option bandwidth '0'
	option flush_conntrack 'auto'

config interface 'wan6'
	option enabled '0'
	list track_ip '2001:4860:4860::8844'
	list track_ip '2620:0:ccd::2'
	option family 'ipv6'
	option reliability '2'
	option count '4'
	option timeout '2'
	option interval '3'
	option failure_loss '75'
	option down '2'
	option up '3'
	option bandwidth '0'
	option flush_conntrack 'auto'

config interface 'wan_2'
	option enabled '1'
	list track_ip '223.5.5.5'
	list track_ip '180.76.76.76'
	list track_ip '119.29.29.29'
	option family 'ipv4'
	option reliability '1'
	option count '4'
	option timeout '2'
	option failure_latency '1000'
	option recovery_latency '500'
	option failure_loss '75'
	option recovery_loss '5'
	option interval '3'
	option down '2'
	option up '3'
	option bandwidth '0'
	option flush_conntrack 'auto'

config interface 'wan6_2'
	option enabled '0'
	list track_ip '2001:4860:4860::8844'
	list track_ip '2620:0:ccd::2'
	option family 'ipv6'
	option reliability '1'
	option count '4'
	option timeout '2'
	option interval '3'
	option down '2'
	option up '3'
	option bandwidth '0'
	option flush_conntrack 'auto'

config member 'wan_m1_w3'
	option interface 'wan'
	option metric '1'
	option weight '3'

config member 'wan_m2_w3'
	option interface 'wan'
	option metric '2'
	option weight '3'

config member 'wanb_m1_w2'
	option interface 'wan_2'
	option metric '1'
	option weight '2'

config member 'wanb_m2_w2'
	option interface 'wan_2'
	option metric '2'
	option weight '2'

config member 'wan6_m1_w3'
	option interface 'wan6'
	option metric '1'
	option weight '3'

config member 'wan6_m2_w3'
	option interface 'wan6'
	option metric '2'
	option weight '3'

config member 'wanb6_m1_w2'
	option interface 'wan6_2'
	option metric '1'
	option weight '2'

config member 'wanb6_m2_w2'
	option interface 'wan6_2'
	option metric '2'
	option weight '2'

config member 'wan_m1_wx'
	option interface 'wan'
	option metric '1'
	option weight '1'

config member 'wanb_m1_wx'
	option interface 'wan_2'
	option metric '1'
	option weight '1'

config member 'wan6_m1_wx'
	option interface 'wan6'
	option metric '1'
	option weight '1'

config member 'wanb6_m1_wx'
	option interface 'wan6_2'
	option metric '1'
	option weight '1'

config policy 'wan_only'
	list use_member 'wan_m1_w3'
	list use_member 'wan6_m1_w3'

config policy 'wanb_only'
	list use_member 'wanb_m1_w2'
	list use_member 'wanb6_m1_w2'

config policy 'balanced'
	list use_member 'wan_m1_wx'
	list use_member 'wanb_m1_wx'
	list use_member 'wan6_m1_wx'
	list use_member 'wanb6_m1_wx'

config policy 'wan_wanb'
	list use_member 'wan_m1_w3'
	list use_member 'wanb_m2_w2'
	list use_member 'wan6_m1_w3'
	list use_member 'wanb6_m2_w2'

config policy 'wanb_wan'
	list use_member 'wan_m2_w3'
	list use_member 'wanb_m1_w2'
	list use_member 'wan6_m2_w3'
	list use_member 'wanb6_m1_w2'

config rule 'wanb_rule'
	option family 'ipv4'
	option ipset 'mwan3_wan_2_devices'
	option use_policy 'wanb_only'

config rule 'wan_rule'
	option family 'ipv4'
	option ipset 'mwan3_wan_devices'
	option use_policy 'wan_only'

config rule 'https'
	option family 'ipv4'
	option sticky '1'
	option dest_port '443'
	option proto 'tcp'
	option use_policy 'balanced'

config rule 'default_rule'
	option family 'ipv4'
	option dest_ip '0.0.0.0/0'
	option use_policy 'balanced'
